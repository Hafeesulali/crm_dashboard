<?xml version="1.0" encoding="UTF-8" ?>

<template id="tmp">
    <t t-name="DashboardCrm">
        <section class="dashboard_main_section" id="main_section_manager">

            <h1 style="text-align:center;">CRM Dashboard</h1>
            <div class="col-12 col-sm-12 col-md-4">
                <form class="form-group">
                    <select id="income_expense_values" class="form-control">
                        <option id="this_year"
                                value="this_year">This Year
                        </option>
                        <option id="this_quarter"
                                value="this_quarter">This Quarter
                        </option>
                        <option id="this_month" value="this_month"
                                >This Month
                        </option>
                        <option id="this_week"
                                value="this_week">This Week
                        </option>
                    </select>
                </form>
            </div>


            <div class="crm_dash_cards row">
                <div class="col-sm-12 col-md-3">
                    <div class="dashboard-card card-shadow my_lead">
                        <div
                                class="dashboard-card__icon-container bg-mauve-light d-flex justify-content-center align-items-center">
                            <i class="fa fa-line-chart text-mauve"/>
                        </div>
                        <div class="dashboard-card__details">
                            <h3>
                                <span>
                                    <div id="my_leads"/>
                                </span>
                            </h3>
                            <h4>My Leads</h4>
                        </div>
                    </div>
                </div>

                <div class="col-sm-12 col-md-3">
                    <div class="dashboard-card card-shadow opportunity">
                        <div
                                class="dashboard-card__icon-container bg-mauve-light d-flex justify-content-center align-items-center">
                            <i class="fa fa-trophy text-mauve"/>
                        </div>
                        <div class="dashboard-card__details">
                            <h3>
                                <span>
                                    <div id="my_opportunities"/>
                                </span>
                            </h3>
                            <h4>My Opportunities</h4>
                        </div>
                    </div>
                </div>

                <div class="col-sm-12 col-md-3">
                    <div class="dashboard-card card-shadow exp_revenue">
                        <div
                                class="dashboard-card__icon-container bg-mauve-light d-flex justify-content-center align-items-center">
                            <i class="fa fa-usd text-mauve"/>
                        </div>
                        <div class="dashboard-card__details">
                            <h3>
                                <span>
                                    <div id="expected_revenue"/>
                                </span>
                            </h3>
                            <h4>Expected Revenue</h4>
                        </div>
                    </div>
                </div>

                <div class="col-sm-12 col-md-3">
                    <div class="dashboard-card card-shadow revenue_card">
                        <div
                                class="dashboard-card__icon-container bg-mauve-light d-flex justify-content-center align-items-center">
                            <i class="fa fa-usd text-mauve"/>
                        </div>
                        <div class="dashboard-card__details">
                            <h3>
                                <span>
                                    <div id="revenue"/>
                                </span>
                            </h3>
                            <h4>Revenue</h4>
                        </div>
                    </div>
                </div>

                <div class="col-sm-12 col-md-3">
                    <div class="dashboard-card card-shadow win_ratio">
                        <div
                                class="dashboard-card__icon-container bg-mauve-light d-flex justify-content-center align-items-center">
                            <i class="fa fa-percent text-mauve"/>
                        </div>
                        <div class="dashboard-card__details">
                            <h3>
                                <span>
                                    <div id="win_ratio"/>
                                </span>
                            </h3>
                            <h4>Win Ratio</h4>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">

                <div class="col-lg-6 col-sm-12 col-md-3">
                    <canvas id="yearChart"/>
                    <canvas id="monthChart"/>
                    <canvas id="weekChart"/>
                    <canvas id="quarterChart"/>
                    <center>
                        <h2>Win/Loss</h2>
                    </center>
                </div>



                <div class="col-lg-6 col-sm-12 col-md-3">
                    <canvas id="year_crm_activity"/>
                    <canvas id="month_crm_activity"/>
                    <canvas id="week_crm_activity"/>
                    <canvas id="quarter_crm_activity"/>
                    <center>
                        <h2>Crm Activity Count</h2>
                    </center>
                </div>

            </div>


        </section>
    </t>


</template>

